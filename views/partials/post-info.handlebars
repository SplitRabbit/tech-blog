<article class="post">
  <h2 class="title">
    {{title}}
  </h2>
  <div class="meta">
    <div> By {{user.username}} on {{format_date created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
    <br>
    <div class="post_content">{{post_content}}</div>
  </div>
</article>